{% extends "layout.twig" %}
{% block title %} Tienda – uoMusic {% endblock %}
{% block body %}
    <h2>Añadir oferta</h2>
    <form class="form-horizontal" method="post" action="/offers/add">
        <div class="form-group">
            <label class="control-label col-sm-2" for="title">Título:</label>
            <div class="col-sm-10">
                <input id="title" type="text" class="form-control" name="title"
                       placeholder="Oferta 1" required="true" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="detail">Detalles:</label>
            <div class="col-sm-10">
                <input id="detail" type="text" class="form-control" name="detail"
                       placeholder="Detalle 1" required="true" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="price">Precio:</label>
            <div class="col-sm-10">
                <input id="price" type="number" class="form-control" name="price"
                       placeholder="4" required="true" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="highlight">Destacar:</label>
            <div class="col-sm-10">
                <input id="highlight" type="checkbox" class="form-control" name="highlight"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Añadir</button>
            </div>
        </div>
    </form>
{% endblock %}