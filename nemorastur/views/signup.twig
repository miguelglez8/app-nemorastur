{% extends "layout.twig" %}

{% block title %} Registrar usuario {% endblock %}

{% block body %}
    <h2>Registrar usuario</h2>
    <form class="form-horizontal" method="post" action="/users/signup">
        <h3>* Por favor, recuerda el nombre de usuario y contraseña para iniciar sesión</h3>

        <div class="form-group">
            <label class="control-label col-sm-2" for="username">Nombre de usuario:</label>
            <div class="col-sm-10">
                <input id="username" type="text" class="form-control" name="username"
                       placeholder="fernando33"
                       value="{{ request.query.username }}" required="true" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="name">Nombre:</label>
            <div class="col-sm-10">
                <input id="name" type="text" class="form-control" name="name"
                       placeholder="Fernando"
                       value="{{ request.query.name }}" required="true" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="surname">Apellido:</label>
            <div class="col-sm-10">
                <input id="surname" type="text" class="form-control" name="surname"
                       placeholder="Alonso"
                       value="{{ request.query.surname }}" required="true" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="password">Contraseña:</label>
            <div class="col-sm-10">
                <input id="password" type="password" class="form-control" name="password"
                       placeholder="contraseña" required="true" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="passwordConfirm">Repita la contraseña:</label>
            <div class="col-sm-10">
                <input id="passwordConfirm" type="password" class="form-control" name="passwordConfirm"
                       placeholder="repita la contraseña" required="true" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Registrar</button>
            </div>
        </div>

        {% if request.query.message %}
            <div class="alert {{ request.query.messageType }} mt-3">
                {{ request.query.message }}
            </div>
        {% endif %}
    </form>
{% endblock %}
